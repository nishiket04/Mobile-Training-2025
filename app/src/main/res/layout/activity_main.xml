<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/activity_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity Task" />

        <Button
            android:id="@+id/layout_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Layouts Task" />

        <Button
            android:id="@+id/drawable_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drawable and Selector Task" />

        <Button
            android:id="@+id/dimension_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dimension Task" />

        <Button
            android:id="@+id/viewpager_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ViewPager Task " />

        <Button
            android:id="@+id/appbar_toolbar_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AppBar and ToolBar Task" />

        <Button
            android:id="@+id/fonts_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fonts Task" />

        <Button
            android:id="@+id/Snackbar_fab_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Snackbar Fab Task" />

        <Button
            android:id="@+id/dialog_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dialog Task" />

        <Button
            android:id="@+id/fragment_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fragment Task" />

        <Button
            android:id="@+id/recyclerview_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recycler View Task" />

        <Button
            android:id="@+id/intent_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intent Task" />

        <Button
            android:id="@+id/permissions_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Permissions Task" />

        <Button
            android:id="@+id/sharedPreferences_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shared Preferences Task" />

        <Button
            android:id="@+id/webview_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Web View Task" />

        <Button
            android:id="@+id/map_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Map Task" />
        <Button
            android:id="@+id/retrofit_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Retrofit Task" />
        <Button
            android:id="@+id/service_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service Task" />
        <Button
            android:id="@+id/notification_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notification Task" />
        <Button
            android:id="@+id/thread_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thread Task" />
        <Button
            android:id="@+id/workmanager_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WorkManager Task" />
        <Button
            android:id="@+id/di_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dependency Injection Task" />
        <Button
        android:id="@+id/theamAndGlide_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Theam &amp; Glide Task" />
        <Button
            android:id="@+id/viewModel_task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Model Task" />

    </LinearLayout>
</ScrollView>