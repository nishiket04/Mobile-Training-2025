<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-feature android:name="android.hardware.camera" android:required="true"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Task"
        tools:targetApi="31">
        <activity
            android:name=".permission.PermissionActivity"
            android:exported="false" />
        <activity
            android:name=".intent.IntentActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="audio/mpeg" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/jpg" />
                <data android:mimeType="image/png" />
            </intent-filter>
        </activity>
        <activity
            android:name=".recyclerview.RecyclerViewActivity"
            android:exported="false" />
        <activity
            android:name=".fragment.FragmentActivity"
            android:exported="false" />
        <activity
            android:name=".snackbar_fab.SnackbarFabActivity"
            android:exported="false" />
        <activity
            android:name=".appbar.AppbarToolbarActivity"
            android:exported="false" />
        <activity
            android:name=".fonts.FontsActivity"
            android:exported="false" />
        <activity
            android:name=".dialog.DialogActivity"
            android:exported="false" />
        <activity
            android:name=".dimension.DimensionActivity"
            android:exported="false" />
        <activity
            android:name=".viewpager.ViewPagerActivity"
            android:exported="false" />
        <activity
            android:name=".drawable.DrawableActivity"
            android:exported="false" />
        <activity
            android:name=".layouts.color_game.ColorGameActivity"
            android:exported="false" />
        <activity
            android:name=".layouts.edit_profile.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".layouts.signup.SignupActivity"
            android:exported="false" />
        <activity
            android:name=".layouts.LayoutsActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.TaskOfActivity"
            android:exported="false" />
        <activity
            android:name=".activity.lifecycle.Task1_Activity"
            android:exported="false" />
        <activity
            android:name=".activity.data_pass.Task2_Activity_2"
            android:exported="false" />
        <activity
            android:name=".activity.data_pass.Task2_Activity_Get_Data_From_Back_Stack"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>